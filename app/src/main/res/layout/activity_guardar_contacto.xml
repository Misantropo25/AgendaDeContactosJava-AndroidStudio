<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuardarContacto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo2"
        android:scaleType="centerCrop"
        android:alpha="0.7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Guardar contactos"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>


        <EditText
            android:id="@+id/txtNombre1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:hint="@string/txtNombre"
            android:inputType="textPersonName"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtDatos1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:textSize="15dp"
            android:hint="@string/txtDatos"
            android:inputType="textMultiLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnGuardar1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="96dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="40dp"
                android:text="@string/btnGuardar"
                android:onClick="Guardar"/>
            <Button
                android:id="@+id/btnLimpiar1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="96dp"
                android:text="Limpiar"
                android:onClick="Guardar"/>
        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>